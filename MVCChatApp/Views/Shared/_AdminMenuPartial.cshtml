@using EFCoreLibrary.Models
@using Microsoft.AspNetCore.Identity
@using EFCoreLibrary

@inject SignInManager<ApplicationUser> SignInManager
@inject UserManager<ApplicationUser> UserManager

@if (SignInManager.IsSignedIn(User) && await UserManager.IsInRoleAsync(UserManager.GetUserAsync(User).Result, "Administrator"))
{
    <li class="nav-item dropdown show">
        <a class="dropdown-toggle nav-link text-dark" href="#" data-bs-toggle="dropdown">Меню администратора</a>
        <div class="dropdown-menu">
            <a class="dropdown-item" asp-area="Admin" asp-controller="User" asp-action="Index">Список пользователей</a>
        </div>
    </li>
}